<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.earcadia.gps.PrincipalActivity">

    <!--TIMER-->
    <TableRow>


    </TableRow>


    <!--Gps PROVIDER-->
    <TableRow>

        <TextView
            android:id="@+id/gpsProviderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gps_provider"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/horarioUltimaLeituraGpsTextTive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/horario_ultima_leitura"
            android:layout_marginLeft="10dp"/>
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latitude"/>

        <TextView
            android:id="@+id/latitudeGpsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitude"/>

        <TextView
            android:id="@+id/longitudeGpsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precis찾o"/>

        <TextView
            android:id="@+id/precisaoGpsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Altura"/>

        <TextView
            android:id="@+id/alturaGpsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </TableRow>

    <TableRow
        android:id="@+id/distanciaGpsTableRow"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dist창ncia"/>

        <TextView
            android:id="@+id/distanciaGpsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </TableRow>


    <!--Network PROVIDER-->
    <TableRow>

        <TextView
            android:id="@+id/networkProviderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/network_provider"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/horarioUltimaLeituraNetworkTextTive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/horario_ultima_leitura"
            android:layout_marginLeft="10dp"/>
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latitude"/>

        <TextView
            android:id="@+id/latitudeNetworkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitude"/>

        <TextView
            android:id="@+id/longitudeNetworkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precis찾o"/>

        <TextView
            android:id="@+id/precisaoNetworkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Altura"/>

        <TextView
            android:id="@+id/alturaNetworkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </TableRow>

    <TableRow
        android:id="@+id/distanciaNetworkTableRow"
        android:visibility="gone">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dist창ncia"/>

        <TextView
            android:id="@+id/distanciaNetworkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/calculaDistanciaButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fazendo_leitura"
            android:onClick="calculaDistancia"
            android:enabled="false"/>
    </TableRow>
</TableLayout>
